<!--pages/posts/posts.wxml-->
<swiper indicator-dots autoplay>
  <swiper-item>
    <image src="/images/wx.png" />
  </swiper-item>
  <swiper-item>
    <image src="/images/vr.png"/>
  </swiper-item>
  <swiper-item>
    <image src="/images/iqiyi.png"/>
  </swiper-item>
</swiper>

<view class='post-container' wx:for="{{postList}}" wx:key="{{index}}">
  <view class='post-container_user'>
    <image src='{{item.avatar}}'></image>
    <text>{{item.date}}</text>
  </view>
  <text class='post-title'>{{item.title}}</text>
  <image class='post-image' src='{{item.imgSrc}}'></image>
  <text class='post-content'>{{item.content}}</text>
  <view class='post-container_footer'>
    <image src='/images/icon/chat.png'></image>
    <text>{{item.collection}}</text>
    <image src='/images/icon/view.png'></image>
    <text>{{item.reading}}</text>
  </view>
</view>