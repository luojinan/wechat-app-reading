/* pages/posts/posts.wxss */

page{
  background-color: #f2f2f2;
}
swiper{
  width: 100%;
  height: 500rpx;
}
swiper image{
  width: 100%;
  height: 500rpx;
}

.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-container_user{
  margin:10rpx 0 20rpx 10rpx;
}
.post-container_user image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-container_user text{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 6px;
  font-size: 26rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
  /* margin-left: 16px; */
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-container_footer{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-container_footer image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-container_footer text{
  vertical-align: middle;
  margin-right: 20px;
}